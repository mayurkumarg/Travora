
<% layout("layouts/mainLayout") %>

<style>
    #filters{
        display:flex;
        flex-wrap: wrap;
        /* justify-content: center; */
        align-items: center;
    }

    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }

    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }

    .tax-info{
        display: none;
    }

    .tax-toggle{
        border: 1px solid rgb(148, 145, 145);
        padding: 6px 1.5rem;
        border-radius: 8px;
    }

</style>

    <!-- <a href="http://localhost:3000/listings/new">Create List</a> -->
<body>
    <!-- <h3>All listings</h3> -->
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-tree-city"></i>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-school-flag"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-wheat-awn"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Artic</p>
        </div>
        <!-- <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div> -->
        <!-- <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boat</p>
        </div> -->
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
            <input class="form-check-input tax-btn" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label " for="switchCheckDefault">Display Taxes</label>
            </div>
        </div>
    </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let data of listingData){ %>
            <a href="/listings/<%=data._id%>" style="text-decoration: none;">
                <div class="card col listing-card" >
                <img src="<%=data.image.url%>" class="card-img-top" alt="CARD IMG" style="height:20rem">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= data.title %></b> <br>
                        &#8377&nbsp<%=data.price.toLocaleString("en-IN") %>
                        <small><i class="tax-info"> &nbsp; +18% GST</i></small>
                    </p>
                </div>
            </div>
            </a>
            <br>
        <% } %>    
  </div>
</body>
<!-- <p class="card-text"><a href="http://localhost:3000/listings/ //data._id"> //data.title %></a></p> -->
<script>
    let taxSwitch=document.getElementById("switchCheckDefault");

    taxSwitch.addEventListener("click",()=>{
        console.log("clicked");
        
        let taxInfo=document.getElementsByClassName("tax-info");

        for(info of taxInfo){
            if(info.style.display!="inline"){
                 info.style.display="inline";
            }else{
                 info.style.display="none";
            }
           
        }
        
    })
</script>