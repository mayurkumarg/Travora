<% layout("layouts/mainLayout") %>

<body>
<div class="row">
    <div class="col-8 offset-2">
    <h4>Create New List</h4> <br>
    <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Ex: Luxury Penthouse with City Views" type="text" class="form-control" required/>
            <div class="valid-feedback">You have entered the 'Title'</div>
            <div class="invalid-feedback">Please enter the 'Title' to proceed</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Ex: Indulge in luxury living with panoramic city views from this stunning penthouse apartment." class="form-control" required></textarea>
            <div class="valid-feedback">You have entered the 'Description'</div>
            <div class="invalid-feedback">Please enter the 'Description' to proceed</div>
        </div>
        <div class="mb-3">
            <label for="url" class="form-label">Image Link</label>
            <input name="listings[image]" type="file" class="form-control"/>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Ex: â‚¹ 3,500" type="text" class="form-control" required/>
                <div class="valid-feedback">You have entered the 'Price'</div>
                <div class="invalid-feedback">Please enter the 'Price' to proceed</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Ex: Lakshadweep" type="text" class="form-control" required/>
                <div class="valid-feedback">You have entered the 'Location'</div>
                <div class="invalid-feedback">Please enter the 'Location' to proceed</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Ex: India" type="text" class="form-control" required/>
            <div class="valid-feedback">You have entered the 'Country'</div>
            <div class="invalid-feedback">Please enter the 'Country name' to proceed</div>
        </div> <br><br>
        <button class="btn btn-dark add-btn">Add</button> <br><br>
    </form>
    </div>
</div>
</body>