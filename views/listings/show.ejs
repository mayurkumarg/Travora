
<% layout("layouts/mainLayout") %>

<script>
    const mapToken="<%=process.env.MAP_TOKEN %>";
    const coordinates= <%- JSON.stringify(data.geometry.coordinates) %>;
</script>

<div class="row">
    <div class="col-8 offset-2">
    <div class="card listing-card" >
        <div style="font-size: 20px; margin-bottom: 10px;"><b><%=data.title%></b></div>
        <img src="<%=data.image.url%>" class="card-img-top show-image" alt="IMAGE">
        <div class="card-body">
              
            <div class="card-text show_text">
                <div><u><i>@<%= data.owner.username %></i></u></div>
                <div><b>Discription:</b> <%= data.description %></div>
                <div><b>Price:</b> &#8377&nbsp<%=data.price.toLocaleString("en-IN") %></div>
                <div><b>Location:</b> <%= data.location %></div>
                <div><b>Country:</b> <%= data.country %></div>
            </div>
        </div>
    </div>

    <!-- "Authorization" Only Owner is Allowed to Edit or Delete -->
    <% if(currentUser && currentUser._id.equals(data.owner._id)) { %>
            <div class="edit-delete-btn">
                <a href="/listings/<%=data._id%>/edit" class="btn btn-dark ed-btn">Edit</a><br><br>
                <form action="/listings/<%=data._id%>?_method=DELETE" method="post">
                            <button class="btn btn-dark dl-btn">Delete</button>
            </form>
        </div>
    <% } %>
        <hr>

    <% if(currentUser) { %>
        <div class="col-8 offset-2 mb-3">
            <h3>Leave a review</h3>
            <form action="/listings/<%=data._id%>/review" method="post" novalidate class="needs-validation">
                <!-- <div class="mb-3 mt-3">
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"> -->
                    <!-- <output for="range4" id="rangeValue" aria-hidden="true"></output> -->
                <!-- </div> -->

                <div class="mb-3 mt-3">
                <fieldset class="starability-slot">
                <!-- <label for="rating" class="form-label">Rating</label> -->
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]"value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter the 'comment' for the review</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
        <hr>
    <% } %>


        <div class="col-8 offset-2 mb-3">
            <% if (data.review && data.review.length > 0) { %>
                <h3>All Reviews</h3>
                <div class="row row-cols-lg-2 row-cols-1 g-3">
                    <% for (let r of data.review) { %>

                    <!-- Inside your reviews loop in show.ejs -->
                    <div class="col">
                    <div class="card review-card h-100">
                        <div class="card-body review-card-body">
                        <h5 class="card-title">@<%=r.author.username%></h5>
                        <p class="starability-result" data-rating="<%= r.rating %>"></p>
                        <p class="card-text"><%= r.comment %></p>
                        </div>
                        <% if (currentUser && r.author && r.author._id.toString() === currentUser._id.toString()) { %>
                        <div class="card-footer review-card-footer bg-transparent border-0">
                            <form class="mb-0" action="/listings/<%=data._id%>/reviews/<%=r._id%>?_method=DELETE" method="post">
                            <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                    </div>

                    <% } %>
                </div>
            <% } %>
        </div>
                
    </div>

        <div class="col-8 offset-2 mb-3">
            <h3>Where you'll be</h3>
            <div id="map"></div>
        </div>
</div>

<script src="/javascript/map.js"></script>