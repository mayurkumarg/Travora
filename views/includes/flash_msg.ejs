<% if(success_msg && success_msg.length){ %>
<div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert" style="position: absolute; z-index: 5;">
   <%= success_msg %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(typeof failure_msg !== 'undefined' && failure_msg.length){ %>
<div class="alert alert-warning alert-dismissible fade show col-6 offset-3" role="alert" style="position: absolute; z-index: 5;">
   <%= failure_msg %> 
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
